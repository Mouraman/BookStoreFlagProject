<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DetailFragment">

    <ImageView
        android:id="@+id/iv_detail"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/tv_nome_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/iv_detail"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        tools:text="Nome" />

    <LinearLayout
        android:id="@+id/ll_storeAndPublishedDate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/iv_detail"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_storeLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="TAG" />

        <TextView
            android:id="@+id/tv_publishedDateDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="TAG" />

    </LinearLayout>
    <ScrollView
        android:id="@+id/sv_description"
        android:layout_width="match_parent"
        android:layout_below="@+id/ll_storeAndPublishedDate"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="TAG" />
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_favoritos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end"
        android:layout_margin="16dp"
        android:src="@drawable/icon_favoritos" />


</RelativeLayout>
